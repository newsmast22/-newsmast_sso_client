%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Newsmast Email
    :css
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: auto;
        font-family: 'Source Sans Pro', sans-serif;
      }

      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        max-width: 700px;
        width: 100%;
        margin: 0 auto;
        padding: 20px;
      }

      .logo {
        width: 140px;
      }

      .otp-verification {
        width: 37.33px;
        height: 42px;
      }

      .reset-password {
        height: 42px; 
      }

      .center {
        display: block;
        margin: 0 auto;
      }

      .email-title {
        vertical-align: super;
      }

      .text {
        font-style: normal;
        font-weight: 400;
        font-size: 17px;
        line-height: 21px;
        color: #364663;
      }

      #code {
        font-style: normal;
        font-weight: 700;
        font-size: 40px;
        line-height: 50px;
        letter-spacing: 0.08em;
        font-variant: small-caps;
        color: #d24a34;
        padding-top: 16px;
      }

      .horizontal-line {
        padding: 31px 0;
      }

      .email-logo {
        padding-bottom: 31px;
      }

      .email-title {
        padding-bottom: 24px;
        font-style: normal;
        font-weight: 700;
        font-size: 22px;
        line-height: 100%;
        color: #000000;
      }

      .email-title img {
        width: 22px;
        vertical-align: text-bottom;
      }

      .stores {
        padding-top: 31px;
      }

      .apple-store {
        vertical-align: super;
        margin-right: 26px;
        width: 96.38px;
        height: 19.62px;
      }

      .google-play-store {
        vertical-align: super;
        width: 80px;
        height: 19.62px;
      }

      .insta {
        margin-right: 28px;
        width: 20px;
      }
      .youtube {
        margin-right: 28px;
        width: 21;
      }

      .linkedin {
        width: 18px;
      }

      .socials {
        padding-bottom: 19px;
      }

      .copyright {
        padding-bottom: 17px;
        font-style: normal;
        font-weight: 400;
        font-size: 13px;
        line-height: 160%;
        color: #000000 !important;
      }

      .terms {
        font-style: normal;
        font-weight: 400;
        font-size: 11px;
        line-height: 13px;
        text-align: center;
        text-decoration-line: underline;
        color: #2c2d2f !important;
      }

      .note {
        font-style: italic;
        font-weight: 400;
        font-size: 12px;
        line-height: 15px;
        text-align: center;
        color: #364663;
        width: 454px;
        padding-top: 16px;
      }

      .down-arrow {
        margin: 0 5px;
        width: 8px;
      }

      .change-password {
        margin: 30px 0;
      }

      .change-password a {
        text-decoration: none;
        border: 1px solid #9299A3;
        font-weight: 400;
        font-size: 17px;
        line-height: 21px;
        color: #2C2D2F;
        padding: 10px 14px;
      }
